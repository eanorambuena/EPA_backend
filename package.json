{
  "name": "epa-server",
  "version": "1.0.0",
  "type": "commonjs",
  "description": "Chat en tiempo real accesible para todos",
  "main": "src/index.js",
  "repository": "git@github.com:IIC2513/EPA_backend.git",
  "author": "Alejandro Held, Pablo Leiva & Emmanuel Norambuena",
  "license": "MIT",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js --watch src",
    "dbsetup": "yarn sequelize-cli db:drop && yarn sequelize-cli db:create && yarn sequelize-cli db:migrate && yarn sequelize-cli db:seed:all",
    "dbstart": "sudo service postgresql start",
    "dbdev": "yarn run dbstart && yarn dev",
    "lint": "eslint . --fix"
  },
  "dependencies": {
    "@koa/cors": "5.0.0",
    "axios": "1.7.2",
    "bcrypt": "5.1.1",
    "dotenv": "16.4.5",
    "jsonwebtoken": "9.0.2",
    "koa": "2.15.3",
    "koa-body": "6.0.1",
    "koa-jwt": "4.0.4",
    "koa-logger": "3.2.1",
    "koa-router": "12.0.1",
    "lint": "0.8.19",
    "nodemon": "3.1.3",
    "pg": "8.12.0",
    "sequelize": "6.37.3",
    "sequelize-cli": "6.6.2"
  },
  "devDependencies": {
    "@eslint/js": "9.4.0",
    "@stylistic/eslint-plugin": "2.1.0",
    "eslint": "9.x",
    "globals": "15.4.0"
  }
}
